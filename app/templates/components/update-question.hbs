{{#if updateQuestionForm}}
  <h4>Update</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author placeholder=question.author"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content placeholder=question.content"}}
      </div>
      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes placeholder=question.notes"}}
      </div>

      <button class="btn btn-default" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'updateQuestionForm'}}>Update </button>
{{/if}}
